@model IEnumerable<TarefasVL.Models.Tarefa>

@{
    ViewBag.Title = "Tarefas - Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p class="link-novo">
    @Html.ActionLink("Nova Tarefa", "Create")
    <img src="~/Content/Imagens/novo.png" />
</p>

@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("filtroPesquisa")
        <input type="submit" value="Pesquisar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataExecucao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataExecucao)

            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                <img src="~/Content/Imagens/edita.png" /> |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
                <img src="~/Content/Imagens/detail.png" /> |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                <img src="~/Content/Imagens/deleta.png" />
            </td>
        </tr>
    }

</table>
